# TSX Trading Bot V4 - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Application Settings
NODE_ENV=development
APP_NAME=TSX_Trading_Bot_V4
APP_VERSION=4.0.0
APP_PORT=3000
APP_HOST=0.0.0.0

# API Configuration
API_BASE_URL=https://api.topstep.com/v1
API_TIMEOUT=30000

# Authentication (TopStep)
# CRITICAL: Keep these values secure and never expose them
TOPSTEP_USERNAME=your_username_here
TOPSTEP_PASSWORD=your_password_here
TOPSTEP_API_KEY=your_api_key_here
TOPSTEP_SECRET_KEY=your_secret_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tsx_bot_v4:

# Security Settings
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d
SESSION_SECRET=generate_another_secure_random_string_here

# SSL/TLS Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD

# Monitoring & Alerts
ENABLE_MONITORING=true
METRICS_PORT=9090
ALERT_EMAIL=alerts@yourdomain.com
ALERT_WEBHOOK_URL=

# Trading Configuration
MAX_POSITIONS=5
MAX_DAILY_LOSS=500
MAX_DAILY_PROFIT=1000
DEFAULT_POSITION_SIZE=1
TRADING_HOURS_CHECK=true

# Risk Management
RISK_CHECK_ENABLED=true
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=3
TRAILING_STOP_ENABLED=false
TRAILING_STOP_PERCENTAGE=1

# Performance Tuning
WORKER_THREADS=4
CONNECTION_POOL_SIZE=10
CACHE_TTL=300
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_TRADING=false
DRY_RUN=false

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_HISTORICAL_DATA=true
ENABLE_BRACKET_ORDERS=true
ENABLE_AUTO_RECONNECT=true
ENABLE_POSITION_SYNC=true

# External Services
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Database (Future Use)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tsx_trading_bot
DB_USER=
DB_PASSWORD=

# Notes:
# 1. Generate secure random strings for JWT_SECRET and SESSION_SECRET
# 2. Use environment-specific values for production/staging/development
# 3. Ensure all sensitive values are properly encrypted
# 4. Regularly rotate API keys and secrets
# 5. Monitor for any exposed credentials in logs